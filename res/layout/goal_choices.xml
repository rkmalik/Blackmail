<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/goalLayoutVertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:baselineAligned="false" >
		
        <LinearLayout
	        android:id="@+id/goalNameLayout"
	        android:paddingBottom="25dp"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="horizontal" >
        
	        <TextView 
	             android:id="@+id/goalNameLabel"
	             android:gravity="center"
				 android:text="@string/goalNameLabel"
				 android:layout_width="wrap_content"
				 android:layout_height="match_parent" />
			<EditText
			        android:id="@+id/goal_name_box"
				    android:layout_marginTop="10dp"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:hint="@string/goal_name"
				    android:layout_weight="10"
				    android:inputType="textCapWords"/>
		</LinearLayout>
		
		<LinearLayout
	        android:id="@+id/platformLayout"
	        android:paddingBottom="10dp"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="horizontal" >
			
		    <TextView 
		         android:id="@+id/platformLabel"
		         android:gravity="center"
				 android:text="@string/platformLabel"
				 android:layout_width="wrap_content"
				 android:layout_height="match_parent" />
		    	    
			<Spinner
			    android:id="@+id/platform_spinner"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="10" />
		</LinearLayout>
		
		<LinearLayout
	        android:id="@+id/dateLayout"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:paddingBottom="10dp"
	        android:orientation="horizontal" >
			
		    <TextView
		        android:id="@+id/startDateLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="fill_vertical|center"
		        android:text="@string/startDateLabel" />
		    
			<Button 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="@string/goal_start_date" 
			    android:onClick="showDatePickerDialog"
			    android:layout_weight="10" />
			
			<TextView 
		         android:id="@+id/endDateLabel"
		         android:gravity="center"
				 android:text="@string/endDateLabel"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />
			
			<Button 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="@string/goal_end_date" 
			    android:onClick="showDatePickerDialog"
			    android:layout_weight="10" />
		</LinearLayout>
		
		<LinearLayout
	        android:id="@+id/timeLayout"
	        android:paddingBottom="10dp"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="horizontal" >
			
		    <TextView 
		         android:id="@+id/startTimeLabel"
		         android:gravity="center"
				 android:text="@string/startDateLabel"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />
		    
			<Button 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="@string/goal_start_time" 
			    android:onClick="showTimePickerDialog"
			    android:layout_weight="10" />
			
			<TextView 
		         android:id="@+id/endTimeLabel"
		         android:gravity="center"
				 android:text="@string/endTimeLabel"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" />
			
			<Button 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:text="@string/goal_end_time" 
			    android:onClick="showTimePickerDialog"
			    android:layout_weight="10" />
		</LinearLayout>
		
		<RelativeLayout 
		    android:layout_gravity="bottom"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >

		<Button
		    android:id="@+id/finishButton"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:onClick="finishButtonClicked"
		    android:text="@string/finish" />

		</RelativeLayout>
		
	</LinearLayout>
